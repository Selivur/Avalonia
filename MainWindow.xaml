<Window x:Class="Avalonia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avalonia"
        mc:Ignorable="d"
        Title="Avalonia" Height="500" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox Name="Playlist_box" Background="Lavender" HorizontalContentAlignment="Stretch" SelectedIndex="0">
        </ListBox>
        <ListBox Name="Songs_box" Grid.Row="2" Background="Lavender" HorizontalContentAlignment="Stretch" >
        </ListBox>
        <Button Click="ChangePlaylist_Button" Content="Change" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="10" Padding="5"/>
    </Grid>
</Window>
